{% extends 'base.html.twig' %}

{% block title %}Shogi{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block body %}
    <style>


        .red {
            color: #b0413e;
        }

        .possible {
            background: #4f805d;
        }

        .eatable {
            background: #b0413e !important;
        }

        /*.cell {*/
        /*    text-align: center;*/
        /*    cursor: pointer;*/
        /*    min-width: 20px;*/
        /*    min-height: 20px;*/
        /*    border: 1px solid gainsboro;*/
        /*    margin: auto;*/
        /*}*/
        table, th, td {
            padding: 10px;
            border: 1px solid black;
            border-collapse: collapse;
            cursor: pointer;
        }

        .cell:hover {
            /*color: orange;*/
            background: orange;
        }

        .white {
            color: #00B8F5;
        }

        .black {
