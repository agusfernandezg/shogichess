    <script>
        (function () {

            clickCell();

            function clickCell() {
                var row = document.getElementById('table').rows;
                for (var i = 0; i < row.length; i++) {
                    for (var j = 0; j < row[i].cells.length; j++) {
                        //console.log(row[i].cells[j].innerHTML);
                        row[i].cells[j].addEventListener('click', function (e) {
                            let row = this.getAttribute("data-row");
                            let col = this.getAttribute("data-col");
                            setRowCol(row, col);
                        })
                    }
                }
            }

            function setRowCol(row, col) {
                document.getElementsByClassName('rowinput')[0].value = row;
                document.getElementsByClassName('colinput')[0].value = col;
            }

        })();
    </script>


