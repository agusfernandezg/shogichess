{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
    <h1>Piece</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ piece.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ piece.code }}</td>
            </tr>
            <tr>
                <th>Promoted</th>
                <td>{{ piece.promoted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ piece.color }}</td>
            </tr>
            <tr>
                <th>Row</th>
                <td>{{ piece.row }}</td>
            </tr>
            <tr>
                <th>Col</th>
                <td>{{ piece.col }}</td>
            </tr>
            <tr>
                <th>Generator</th>
                <td>{{ piece.generator }}</td>
            </tr>
            <tr>
                <th>Promotedgenerator</th>
                <td>{{ piece.promotedgenerator }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('piece_index') }}">back to list</a>

    <a href="{{ path('piece_edit', {'id': piece.id}) }}">edit</a>

    {{ include('piece/_delete_form.html.twig') }}
{% endblock %}
