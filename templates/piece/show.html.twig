{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
    <h1>Piece</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ piece.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ piece.code }}</td>
            </tr>
            <tr>
                <th>Promoted</th>
                <td>{{ piece.promoted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('piece_index') }}">back to list</a>

    <a href="{{ path('piece_edit', {'id': piece.id}) }}">edit</a>

    {{ include('piece/_delete_form.html.twig') }}
{% endblock %}
